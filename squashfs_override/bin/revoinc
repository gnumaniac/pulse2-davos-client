# Tell the server to create the image directory; store UUID in /etc/UUID
#
ETH=`cat /etc/eth`
MAC=`cat /etc/mac`

. /usr/lib/revolib.sh
. /etc/netinfo.sh

SRV=$Next_server
[ -z "$SRV" ] && exit 1

# shared or not ?
TYPE="COPY"
grep -q /imgbase/Base /etc/cmdline && TYPE="BASE"

# backup my UUID
if get_image_uuid $TYPE $MAC $SRV
then
    IMAGE_UUID=$ANSWER
    echo "$IMAGE_UUID" > /etc/IMAGE_UUID
    exit 0
else
    exit 1
fi
